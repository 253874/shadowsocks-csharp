<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <FontFamily x:Key="UIFont">Segoe UI,Microsoft Yahei UI,Microsoft Yahei,微软雅黑</FontFamily>
    <!-- SysTrayToolTip -->
    <LinearGradientBrush
        x:Key="DialogBackgroundBrush"
        EndPoint="0.5,1"
        StartPoint="0.5,0">
        <GradientStop
            Color="#FFD4E3F5"
            Offset="1" />
        <GradientStop
            Color="#FFFFFFFF"
            Offset="0" />
    </LinearGradientBrush>
    <SolidColorBrush
        x:Key="PopupBorderBrush"
        Color="#FFA7BBD0" />
    <SolidColorBrush
        x:Key="TitleForeground"
        Color="#FF235593" />

    <!-- Editor Label TextBlock -->
    <Style
        x:Key="TitleLabel"
        TargetType="{x:Type TextBlock}">
        <Setter
            Property="Foreground"
            Value="{DynamicResource TitleForeground}" />
        <Setter
            Property="FontSize"
            Value="16" />
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>